@model SecuredCRM.Models.UnavailableDateVM

<h2>EditUnavailableDates</h2>
<html>
<head>
</head>
<body>
	@using (Html.BeginForm())
	{
		@Html.AntiForgeryToken()

		<div class="form-horizontal">
			<h4>Unavailable In Date</h4>
			<hr />
			@Html.ValidationSummary(true, "", new { @class = "text-danger" })
			@Html.HiddenFor(model => model.ApplicationUserId)
			@Html.HiddenFor(model => model.OldStartDate)
			@Html.HiddenFor(model => model.OldEndDate)

			<div class="form-group">
				@Html.LabelFor(model => model.NewStartDate, new { @class = "control-label col-md-2" })
				<div class="col-md-10">
					<input type="datetime" id="NewStartDate" name="NewStartDate" value="@Model.NewStartDate.ToString("d-M-yyyy")" class="form-control" />
					@Html.ValidationMessageFor(model => model.NewStartDate, "", new { @class = "text-danger" })

				</div>
			</div>
			<div class="form-group">
				@Html.LabelFor(model => model.NewEndDate, new { @class = "control-label col-md-2" })
				<div class="col-md-10">
					<input type="datetime" id="NewEndDate" name="NewEndDate" value="@Model.NewEndDate.ToString("d-M-yyyy")" class="form-control" />
					@Html.ValidationMessageFor(model => model.NewEndDate, "", new { @class = "text-danger" })
					</div>
				</div>

				<div class="form-group">
					<div class="col-md-offset-2 col-md-10">
						<input type="submit" value="שמירה" class="btn btn-default" />
					</div>
				</div>
			</div>
	}

	<div>
		@Html.ActionLink("בחזרה לעמוד הראשי", "Index")
	</div>
	@section Scripts {
	@Scripts.Render("~/Content/themes/base/datepicker.css")
	@Scripts.Render("_ValidationScriptsPartial");

	}
</body>
</html>
