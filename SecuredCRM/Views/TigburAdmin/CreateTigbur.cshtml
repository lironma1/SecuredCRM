@model SecuredCRM.Models.Tigbur

@{
	ViewBag.Title = "יצירת תגבור חדש";
	string Course = TempData.Peek("CourseId").ToString();
	string tutor = TempData.Peek("ApplicationUserId").ToString();
}
<div class="container-fluid" style="float:right;background-color:white" >
	<h2>@ViewBag.Title</h2>
	<hr />
	@using (Html.BeginForm("Insert", "TigburAdmin", FormMethod.Post))
			{
				<div class="form-horizontal">
					@Html.EditorFor(model => model.CourseId, new { htmlAttributes = new { @Value = Course, @readonly = "readonly", hidden = "hidden" } })

					@Html.EditorFor(model => model.ApplicationUserId, new { htmlAttributes = new { @Value = tutor, @readonly = "readonly", hidden = "hidden" } })
					@Html.AntiForgeryToken()
					@Html.ValidationSummary(true, "", new { @class = "text-danger" })
					<div class="form-group">
						<div class="col-md-10">
							@Html.EditorFor(model => model.TuteeName, new { htmlAttributes = new { @class = "form-control" } })
							@Html.ValidationMessageFor(model => model.TuteeName, "", new { @class = "text-danger" })
						</div>
						@Html.LabelFor(model => model.TuteeName, htmlAttributes: new { @class = "control-label col-md-2" })
					</div>

					<div class="form-group">
						<div class="col-md-10">
							@Html.EditorFor(model => model.TuteeEmail, new { htmlAttributes = new { @class = "form-control" } })
							@Html.ValidationMessageFor(model => model.TuteeEmail, "", new { @class = "text-danger" })
						</div>
						@Html.LabelFor(model => model.TuteeEmail, htmlAttributes: new { @class = "control-label col-md-2" })
					</div>

					<div class="form-group">
						<div class="col-md-10">
							@Html.EditorFor(model => model.TuteePhone, new { htmlAttributes = new { @class = "form-control" } })
							@Html.ValidationMessageFor(model => model.TuteePhone, "", new { @class = "text-danger" })
						</div>
						@Html.LabelFor(model => model.TuteePhone, htmlAttributes: new { @class = "control-label col-md-2" })
					</div>

					<div class="form-group">
						<div class="col-md-10">
							@Html.DropDownList("CategoryId", null, htmlAttributes: new { @class = "form-control" })
							@Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
						</div>
						@Html.LabelFor(model => model.CategoryId, "קטגוריה", htmlAttributes: new { @class = "control-label col-md-2" })
					</div>

					<div class="form-group">
						<div class="col-md-10">
							@Html.EditorFor(model => model.AssignmentTotal, new { htmlAttributes = new { @class = "form-control", @Value = 6 } })
							@Html.ValidationMessageFor(model => model.AssignmentTotal, "", new { @class = "text-danger" })
						</div>
						@Html.LabelFor(model => model.AssignmentTotal, htmlAttributes: new { @class = "control-label col-md-2" })
					</div>

					<div class="form-group">
						<div class="col-md-10">
							@Html.EditorFor(model => model.Comments, new { htmlAttributes = new { @class = "form-control" } })
							@Html.ValidationMessageFor(model => model.Comments, "", new { @class = "text-danger" })
						</div>
						@Html.LabelFor(model => model.Comments, htmlAttributes: new { @class = "control-label col-md-2" })
					</div>

					<div class="form-group">
						<div class="col-md-10">
							<div class="checkbox"
								 @Html.EditorFor(model => model.FollowUp, new { htmlAttributes = new { @class = "form-control" } })
								 @Html.ValidationMessageFor(model => model.FollowUp, "", new { @class = "text-danger" })
					</div>
						</div>
						@Html.LabelFor(model => model.FollowUp, htmlAttributes: new { @class = "control-label col-md-2" })
					</div>

					<div class="form-group">
						<div class="col-md-offset-2 col-md-10">
							<input type="submit" value="צור חדש" class="btn btn-default" />
						</div>
					</div>
			}

		</div>
	<div>
		@Html.ActionLink("חזרה לאינדקס", "Index")
	</div>
</div>