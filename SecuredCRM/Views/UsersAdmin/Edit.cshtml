@model SecuredCRM.Models.EditUserViewModel

@{
	ViewBag.Title = "עריכת פרטי משתמש";
}

<div class="container-fluid" style="float:right;background-color:white">
	<h2>@ViewBag.Title</h2>
	<hr />
	@using (Html.BeginForm())
	{
		@Html.AntiForgeryToken()
		<div class="form-horizontal" role="form" >
			@Html.ValidationSummary(true)
			@Html.HiddenFor(model => model.Id)

			<div class="form-group">
				<div class="col-md-10">
					@Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
					@Html.ValidationMessageFor(model => model.Email)
				</div>
				@Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
			</div>
			<div class="form-group">
				<div class="col-md-10">
					@Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
				</div>
				@Html.LabelFor(model => model.FirstName, new { @class = "control-label col-md-2" })
			</div>
			<div class="form-group">
				<div class="col-md-10">
					@Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
				</div>
				@Html.LabelFor(model => model.LastName, new { @class = "control-label col-md-2" })
			</div>
			<div class="form-group">
				<div class="col-md-10">
					@Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
				</div>
				@Html.LabelFor(model => model.PhoneNumber, new { @class = "control-label col-md-2" })
			</div>
			<div class="form-group">
				<div class="col-md-10">
					@Html.TextBoxFor(m => m.Campus, new { @class = "form-control" })
				</div>
				@Html.LabelFor(model => model.Campus, new { @class = "control-label col-md-2" })
			</div>
			<hr />
			@Html.Label("הרשאות", new { @class = "control-label col-md-2", @style = "float:right" })
			<div class="form-group">
				<span class=" col-md-10">
					@foreach (var item in Model.RolesList)
					{
						@("  ")
						@Html.Label(item.Value, new { @class = "control-label" })
						<input type="checkbox" name="SelectedRole" value="@item.Value" checked="@item.Selected" class="checkbox-inline" />
					}
				</span>
			</div>
			<div class="form-group">
				<div class="col-md-offset-2 col-md-10">
					<input type="submit" value="שמירה" class="btn btn-default" />
				</div>
			</div>
		</div>
	}

	<div>
		@Html.ActionLink("בחזרה לעמוד הראשי", "Index")
	</div>

	@section Scripts {
		@Scripts.Render("~/bundles/jqueryval")
	}
</div>